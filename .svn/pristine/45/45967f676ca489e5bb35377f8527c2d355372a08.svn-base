<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.icloud.modules.zltdd.dao.ZltddRecommendMapper">


    <!-- 基础map -->
    <resultMap type="com.icloud.modules.zltdd.entity.ZltddRecommend" id="BaseResultMap">
     <id property="id" column="id"/>
     <result property="nickname" column="nickname"/>
     <result property="openid" column="openid"/>
     <result property="headimgurl" column="headimgurl"/>
     <result property="activityId" column="activity_id"/>
     <result property="parentId" column="parent_id"/>
     <result property="userType" column="user_type"/>
     <result property="maxNum" column="max_num"/>
     <result property="readyedNum" column="readyed_num"/>
     <result property="mysceneId" column="myscene_id"/>
     <result property="parentSceneId" column="parent_scene_id"/>
    </resultMap>

   <!-- 基础字段列 -->
   <sql id="Base_Column_List" >
id,nickname,openid,headimgurl,activity_id,parent_id,user_type,max_num,readyed_num,myscene_id,parent_scene_id
    </sql>


<select id="queryMixList" resultMap="BaseResultMap">
select * from t_zltdd_recommend t
<where>
<if test="id != null">
    and t.id = #{id}
</if>
<if test="nickname != null">
    and t.nickname = #{nickname}
</if>
<if test="openid != null">
    and t.openid = #{openid}
</if>
<if test="headimgurl != null">
    and t.headimgurl = #{headimgurl}
</if>
<if test="activityId != null">
    and t.activity_id = #{activityId}
</if>
<if test="parentId != null">
    and t.parent_id = #{parentId}
</if>
<if test="userType != null">
    and t.user_type = #{userType}
</if>
<if test="maxNum != null">
    and t.max_num = #{maxNum}
</if>
<if test="readyedNum != null">
    and t.readyed_num = #{readyedNum}
</if>
<if test="mysceneId != null">
    and t.myscene_id = #{mysceneId}
</if>
    <if test="sql_filter != null and sql_filter!=''">
        and ${sql_filter}
    </if>
</where>
    <if test="sidx != null and sidx!=''">
        order by ${sidx} ${sord}
    </if>
</select>
</mapper>